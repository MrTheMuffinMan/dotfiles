# functions

function lst { ls -t | sed "$1"q };

function md { markdown "$1" | w3m -T text/html };

function sfp { sfeed_plain $HOME/.sfeed/feeds/"$1" > $HOME/.sfeed/"$1" };

function w3mimg { w3m -o imgdisplay=/usr/lib/w3m/w3mimgdisplay "$1" };

function w3mimgdisplay { /usr/lib/w3m/w3mimgdisplay <<<$'0;1;100;100;100;100;;;;;"$1"\n4;\n3;i' };

function wm { echo "$1" | wc -m };

function ww { echo "$1" | wc -w };
