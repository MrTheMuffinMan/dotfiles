# functions
doc() {
	catdoc "$1" | "$PAGER"
}
 
docx() {
	docx2txt "$1" - | "$PAGER"
}
# edit which
ew() { 
	$EDITOR $(which "$1")
}
# last (newest) file(s)	
lst() { 
	ls -c --color | sed "$1"q
}

md() { 
	markdown "$1" | w3m -T text/html | "$PAGER"
}

odt() {
	odt2txt "$1" | "$PAGER"
}

pod() {
	pod2mdoc "$1" | mandoc | "$PAGER"
}

sfp() { 
	sfeed_plain $HOME/.sfeed/feeds/"$1" > $HOME/.sfeed/"$1" 
}

w3mimg() { 
	w3m -o imgdisplay=/usr/lib/w3m/w3mimgdisplay "$1" 
}

w3mimgdisplay() {
	/usr/lib/w3m/w3mimgdisplay <<<$'0;1;100;100;100;100;;;;;"$1"\n4;\n3;i' 
}

wm() { 
	echo "$1" | wc -m 
}

ww() { 
	echo "$1" | wc -w 
}
