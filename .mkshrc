# functions
2sf() {
	song="$1"
	shift	
	2sftowav "$song" /dev/stdout 2>/dev/null | aucat -r 44100 -i - "$@" 
}

blueopus() {
	opusdec --quiet "$1" - | aplay -D bluealsa -
}

