w3mimg() { 
	w3m -o imgdisplay=/usr/lib/w3m/w3mimgdisplay "$1" 
}

w3mimgdisplay() {
	/usr/lib/w3m/w3mimgdisplay <<<$'0;1;100;100;100;100;;;;;"$1"\n4;\n3;i' 
}

wm() { 
	print "$1" | wc -m 
}

ww() { 
	print "$1" | wc -w 
}

xb() {
	xrandr --output DVI-D-0 --brightness "$1" --output HDMI-A-0 --brightness "$1"
}

yts() { # youtube video links expire after some time
	url="$1"
	shift
	dir=~/videos/tmp
	format=mkv
	vid="$(youtube-dl -e "$url")"."$format" # causes issues if 's' is in the filename
	mkdir -p "$dir"
	[ ! -f "$dir"/"$vid" ] && youtube-dl "$url" --merge-output-format "$format" --recode-video "$format" "$dir"/"$vid"
	ffplay "$dir"/"$vid" "$@"
}
